<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_anuncio"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="8dp"
android:foreground="?android:attr/selectableItemBackground"
card_view:cardElevation="2dp"
card_view:cardCornerRadius="2dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="130dp" android:padding="5dp" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <ImageView android:layout_width="0dp" android:layout_height="130dp"
        android:layout_weight="1" android:src="@drawable/ic_user"
        android:contentDescription="@string/app_name" />

    <LinearLayout android:layout_width="0dp" android:layout_height="130dp"
        android:paddingTop="10dp" android:orientation="vertical" android:layout_weight="2">
        <TextView android:id="@+id/txt_anuncio_titulo" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="20sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/txt_anuncio_valor" android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_anuncio_local" android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_anuncio_data" android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>